<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.meowt.wallpapers.DonateActivity"
    tools:showIn="@layout/app_bar_donate">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/circle_item_menu"
        android:orientation="vertical"
        android:weightSum="30"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="top"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="20"
            app:srcCompat="@drawable/qrpay" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:text="QRPAY"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:layout_weight="1"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textColor="@color/colorWhite"
            android:textAlignment="center"
            android:textSize="15sp"
            android:text="OR" />

        <ToggleButton
            android:id="@+id/toggleButtonDonate"
            android:layout_width="237dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:background="@drawable/circle_button_next"
            android:checked="true"
            android:textColor="@color/colorWhite"
            android:textOff="DONATE WITH QRPAY"
            android:textOn="DONATE WITH MOMO"
            android:onClick="onClickButtonDonate"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:textColor="@color/colorWhite"
            android:textAlignment="center"
            android:textSize="15sp"
            android:text="OR" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/circle_button_next"
            android:text="DONATE WITH PAYPAL"
            android:textAlignment="center"
            android:layout_weight="3"
            android:onClick="onclickButtonPalpal"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />


    </LinearLayout>
</android.support.constraint.ConstraintLayout>